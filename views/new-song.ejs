<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>Document</title>
</head>

<body>

    <%- include("partials/header") %>

    <h1>Criar nova musica</h1>

    <form id="new-song">

    <label for="title">Titulo:</label>
    <input type="text" name="title">

    <br><br>

    <label for="artist">Artista:</label>
    <input type="text" name="artist">

    <br><br>

    <label for="genre">Género:</label>
    <input type="text" name="genre">

    <br><br>

    <label for="album">Album:</label>
    <input type="text" name="album">

    <br><br>

    <label for="duration_seconds">Duração(segundos):</label>
    <input type="text" name="duration_seconds">

    <br><br>

    <label for="release_date">Data de lançamento:</label>
    <input type="date" name="release_date">

    <br><br>

    <label for="likes">Nº de Likes:</label>
    <input type="text" name="likes">

    <br><br>

    <input type="submit" value="Criar">

    </form>

    <script>
        document.getElementById('new-song').addEventListener('submit', function(event) {
            event.preventDefault();
    
            const formData = new FormData(event.target);
            const data = Object.fromEntries(formData.entries());
    
            axios.post(`/api/songs`, data)
            .then(response => {
                console.log('Success:', response.data);
                location.reload();
                
            })
            .catch((error) => {
                console.error('Error:', error);
                
            });
        });
    </script>


</body>
</html>