<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>Document</title>
</head>

<body>

    <%- include("partials/header") %>

    <h1>Criar nova musica</h1>

    <form id="new-song">

        <label for="title">Title:</label>
        <input type="text" name="title">

        <br><br>

        <label for="artist">Artist:</label>
        <input type="text" name="artist">

        <br><br>

        <label for="album">Album:</label>
        <input type="text" name="album">

        <br><br>

        <label for="genre">Genre:</label>
        <input type="text" name="genre">

        <br><br>

        <label for="duration_seconds">Duation Seconds:</label>
        <input type="text" name="duration_seconds">

        <br><br>

        <label for="release_date">Release Date:</label>
        <input type="date" name="release_date">

        <br><br>

        <label for="likes">NÂº of Likes:</label>
        <input type="text" name="likes">

        <br><br>

        <input type="submit" value="Criar">

    </form>

    <script>
        document.getElementById('new-song').addEventListener('submit', function(event) {
            event.preventDefault();
    
            const formData = new FormData(event.target);
            const data = Object.fromEntries(formData.entries());
    
            axios.post(`/api/songs`, data)
            .then(response => {
                console.log('Success:', response.data);
                location.reload();
                
            })
            .catch((error) => {
                console.error('Error:', error);
                
            });
        });
    </script>


</body>
</html>